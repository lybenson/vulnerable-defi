{
    "env": {
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": "standard",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "alice": true,
        "bob": true,
        "charlie": true,
        "david": true
    },
    "rules": {
        "no-unused-vars": [
            "error",
            {
                "varsIgnorePattern": "should|expect"
            }
        ]
    }
}
